header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src="/images/logo.svg", alt="Logo")
      .col-4
        .box-search
          form(
            action="/songs/search"
            method="GET"
          )
            div(class="form-group d-flex mb-0")
              input(
                type="text"
                placeholder="Nhập từ khóa..."
                class="form-control"
                name="keyword"
                value=keyword
              )
              button(
                type="submit"
                class="btn btn-primary"
              ) Tìm
      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li
              a(href="/topics") Chủ đề
            if(user)
              li 
                a(href="/user/profile") Chào #{user.fullName.trim().split(' ').reverse()[0]}
              li 
                a(href="/songs/favorite") Yêu thích
              li 
                a(href="/user/logout") Đăng xuất
            else
              li 
                a(href="/user/register") Đăng ký
              li 
                a(href="/user/login") Đăng nhập
            